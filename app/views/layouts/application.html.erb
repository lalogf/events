<!DOCTYPE html>
<html>
<head>
  <title>Eventos</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
</head>
<body>
<div class="container">
		<% if flash[:notice].present? %>
		<div class="container text-center alert alert-primary">
			<%= flash[:notice].html_safe %>
		</div>
		<% end %>

		<% if flash[:alert].present? %>
		<div class="container text-center alert alert-warning">
			<%= flash[:alert].html_safe %>
		</div>
		<% end %>

		<% if flash[:success].present? %>
		<div class="container text-center alert alert-success">
			<%= flash[:success].html_safe %>
		</div>
		<%end%>
		<% if flash[:error].present? %>
		<div class="container text-center alert alert-danger">
			<%= flash[:error].html_safe %>
		</div>
		<% end %>
	

<%= yield %>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</body>
</html>
