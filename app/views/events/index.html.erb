<h1>Welcome to our events web</h1>
<a href="" class="btn btn-primary" data-toggle="modal" data-target="#newEvent">Crear evento</a>
<%= link_to "Crear invitado", new_atendee_path, class: "btn btn-success" %>


<div class=="row" style="margin-top:10px">
	<table class="table">
		<tr>
			<th>Name</th>
			<th>Location</th>
			<th>Date</th>
			<th>Otros</th>
		</tr>
		<% @events.each do |event|%>
			<tr>
				<td><%= event.name%></td>
				<td><%= event.location%></td>
				<td><%= event.date%></td>
				<td><%= link_to "Edit", edit_event_path(event.id), class: "btn btn-warning"%> <%= link_to "Details", event_path(event.id),  class: "btn btn-default" %> <%= link_to "Delete", event_path(event.id), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' }%></td>
			</tr>
		<% end %>
	</table>	
</div>




<div class="modal modal-fade" id="newEvent">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
			 <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h3 class="modal-title"> New event</h3>
			</div>
			<div class="modal-body">
				<%= render 'form' %>
			</div>
		</div>
	</div>
</div>
